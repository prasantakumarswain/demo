<div class="row">
  <div class="span6 offset3" style="border: 1px solid #E5E5E5;">
    <%= form_for @user,:url => {:action => "create_new_user"}, :html => {:class => "form-horizontal"} do |f| %>
        <legend style="text-align: center;">Sign Up</legend>
        <div class="control-group">
          <label class="control-label">
            <%=f.label :name %>
          </label>
          <div class="controls">
            <%= f.text_field :name%>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">
            <%=f.label :email %>
          </label>
          <div class="controls">
            <%= f.text_field :email%>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">
            <%=f.label :password %>
          </label>
          <div class="controls">
            <%= f.password_field :password %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">
            <%=f.label :password_confirmation %>
          </label>
          <div class="controls">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <%= f.submit "Sign Up", :class => "btn btn-success" %>
          </div>
        </div>
    <% end %>
  </div>
</div>


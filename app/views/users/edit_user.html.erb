<h1>Editing</h1>
<%= form_for @user, :url =>{:action => "user_update"},:method => "put" do |f| %>
    <div class="control-group">
      <label class="control-label">
        <%=f.label :name %>
      </label>
      <div class="controls">
        <%= f.text_field :name%>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">
        <%=f.label :email %>
      </label>
      <div class="controls">
        <%= f.text_field :email%>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit :class => "btn btn-success" %>
      </div>
    </div>
    <%= link_to 'Back', root_path %>
<% end %>